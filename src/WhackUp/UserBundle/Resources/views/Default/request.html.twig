{# src/WhackUp/UserBundle/Resources/views/Default/request.html.twig #}



{% extends "::base.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block link_form %}
    <a class="link-connect" href="{{path('fos_user_security_login')}}"  >Connexion</a>
    <a class="link-connect" href="{{path('fos_user_registration_registrer')}}"  >Connexion</a>
{% endblock %}

{% block form_block %}
        <div class="wrap-register">
            <div class="title">Mot de passe oublié</div>
            <div class="containt-register">

                <form method='post' action='{{path('fos_user_resetting_request')}}' class="fos_user_resetting_request" novalidate="novalidate" > {# novalidate="novalidate #}
                    <div class="form-group m-license">
                        <label>
                            Réinitialisez votre mot de passe en renseignant votre adresse mail.
                        </label>
                    </div>
                    
                    <div class="info-form">
                        {{ form_errors(form.email) }}
                        {% if message_form|trim %} <span>{{ message_form }}</span> {% endif %}
                    </div>
                    
                    <div class="form-group ">
                        <div class="input-group">
                            <span class="input-group-addon"> <span class="glyphicon glyphicon-envelope"></span></span>
                            <!--<input type="text" class="form-control" placeholder="Mail"/> -->
                            {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'Mail'}}) }}
                        </div>
                    </div>
                   
                    <div class="form-group m-form-register">
                        <button type="submit" class="form-control btn btn-default">Register</button>
                    </div>
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>
{% endblock %}






























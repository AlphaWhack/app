{% block page %}page-admin{% endblock %}
{% block link_logo %}{{ path('whack_up_manage_homepage') }} {% endblock %}

{% block block_menu_user %}
     <div class="wrap-item-menu-admin">
          <div class="item {% block page_disco %}{% endblock %}">
              <a href="{{ path('whack_up_manage_disco') }}" title="Gestion des discotheques" >  Discoth&egrave;que</a>
          </div>
          <div class="item {% block page_advert %}{% endblock %}">
              <a href="{{ path('whack_up_manage_pub') }}" title="Gestion des annonces" >  Annonce </a>
          </div>
          <div class="item {% block page_users %}{% endblock %}">
              <a href="{{ path('whack_up_manage_user') }}" title="Gestion des utilisateurs" > Utilisateur </a>
          </div>
          <div class="item {% block page_config %}{% endblock %}">
              <a href="" > Configuration </a>
          </div>
     </div>
{% endblock %}

{% block block_info_user %}
    <div class="wrap-infos-user">
        <div class="min-profil-notif"> <span class="glyphicon glyphicon-envelope"></span><sup>25</sup></div>
        <div class="min-profil-name">
            <div class="pseudo-profil">
                {{ app.user.username }} <span class="glyphicon glyphicon-menu-down"></span>
            </div>
            <div class="other-link-infos">
                <ul>
                    <li><a href="{{ path('admin_profile') }}"> <span class="glyphicon glyphicon-user"></span> Mon profil</a></li>
                    <li><a href="{{ path('admin_logout') }}"> <span class="glyphicon glyphicon-off"></span> D&eacute;connexion</a></li>
                </ul>
            </div>
        </div>
        <div class="min-profil-picture">
            {% if app.user.image == null %}
                <img src="{{asset('bundles/whackup/file/profile/none.png') }}" />
            {% else %}
                <img src="{{ asset(app.user.image.uploadDir ~ '/' ~ app.user.image.url) }}" alt="{{ app.user.image.url }}" />
            {% endif %}
        </div>
    </div>
{% endblock %}


{% block block_main %}

      {% block side_left %}
      {% endblock %}

      {% block side_right %}
      {% endblock %}

{% endblock %}












